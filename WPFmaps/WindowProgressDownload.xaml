<Window x:Class="WPFmaps.WindowProgressDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFmaps"
        mc:Ignorable="d"
        Title="WindowProgressDownload" Height="150" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar x:Name="progressBar" Height="40"/>
        <TextBlock x:Name="textblockfilename" Text="Загрузка файла: " FontSize="15" Margin="3"/>
        <TextBlock x:Name="textblockSpeedByteRecived" Text="Скорость загрузки: " FontSize="15" Margin="5" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
